{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "lib": ["dom", "esnext"],
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
